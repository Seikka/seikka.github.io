        $(function () {
            $("form").submit(function (e) {
                var pwd = $("#txtpwd").val();
                if (pwd.length < 6 || pwd.length > 23) {
                    alert("请确认密码长度为6~23位");
                    return false;
                }
                if ($("#txtcode").val().length < 4) {
                    alert("请填写短信验证码");
                    return false;
                }
            });
            if (isuniapp == '1' && success == 'success') {
                //$("a.download_apk").attr("href", "javascript:;");
                //weixinTip(this);
                location.href = "http://www.zhongrenbang.cc/next/downuniapp";
            }
            $("a.download_apk").click(function () {
 
                    var tempdownfile = 'c/zrb_20200316.apk';
                if (Device.isIos || Device.isIPhone || Device.isIPad) {
                    location.href = "http://wx.zhongrenbang.net/earn/down";
                }else if (Device.isWeixin) {
                        location.href = "http://a.app.qq.com/o/simple.jsp?pkgname=com.jianzhiku.zhongrenbang";
                    }   else if (Device.isAlipay) {
                        location.href = "http://zhongrenbang.oss-cn-hangzhou.aliyuncs.com/" + tempdownfile;
                    } else {
                        location.href = "http://cdn2.zhongrenbang.cc/" + tempdownfile;
                    }
                    return false;
            });
        });
 
        //function weixinTip(ele) {
        //    var ua = navigator.userAgent;
        //    var isWeixin = !!/MicroMessenger/i.test(ua);
        //    if (isWeixin) {
